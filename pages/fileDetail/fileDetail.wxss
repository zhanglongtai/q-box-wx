/**fileDetail.wxss**/
.container {
    width: 700rpx;
    min-width: 350px;
    height: 300px;
    border-radius: 5px;
    margin: 10px auto 20px auto;
    background-color: #EEEEEE;
}
.header-container {
    width: 100%;
    height: 80px;
    margin: auto;
    display: flex;
    align-items: center;
    justify-content: center;
}
.icon {
    height: 50px;
    width: 90px;
    display: flex;
    justify-content: center;
    align-items: center;
}
.name {
    width: 240px;
    height: 50px;
    margin: 0 20px 0 0; 
    line-height: 50px;
    font-size: 20px;
    font-weight: 600;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.text-body {
    width: 250px;
    height: 40px;
    margin: 10px 0 0 40px;
    line-height: 40px;
    font-size: 14px;
}

.hint {
    width: 80%;
    height: 40px;
    line-height: 40px;
    text-align: center;
    margin: 20px auto 10px auto;
}
