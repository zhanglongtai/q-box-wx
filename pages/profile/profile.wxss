/**profile.wxss**/
page {
    background-color: #ddd;
}

.header {
    width: 100%;
    height: 80px;
    display: flex;
    align-items: center;
    border-bottom: 1px solid;
    border-top: 1px solid;
    background-color: #2962FF;
}
.avatar {
    width: 20%;
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
}
.avatar-icon {
    width: 40px;
    height: 40px;
    border-radius: 20px;
}
.name {
    max-width: 200px;
    height: 80px;
    line-height: 80px;
}
.vip {
    width: 50px;
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
}
.vip-icon {
    width: 40px;
    height: 20px;
}

.info-bar {
    width: 100%;
    height: 120px;
    display: flex;
    align-items: center;
    justify-content: space-around;
    background-color: #82B1FF;
}
.info-item {
    width: 33%;
    height: 120px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.info-icon-container {
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
}
.info-icon {
    width: 40px;
    height: 40px;
}
.info-hint {
    width: 80%;
    height: 20px;
    line-height: 20px;
    text-align: center;
    font-size: 16px;
    font-weight: 600;
}
.info-text {
    width: 80%;
    height: 12px;
    line-height: 12px;
    text-align: center;
    font-size: 10px;
}
.divider {
    width: 1px;
    height: 80px;
    background-color: #424242;
}

.app-list {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    background-color: white;
}
.app-container {
    width: 25%;
    height: 100px;
    border-bottom: 1px solid #ddd;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative
}
.app-content {
    width: 100%;
    height: 100px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.app-divider {
    width: 1px;
    height: 100px;
    background-color: #ddd;
    position: absolute;
    right: 0;
    top: 0;
}
.app-icon-container {
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
}
.app-icon {
    width: 40px;
    height: 40px;
}
.app-text {
    width: 80%;
    height: 20px;
    line-height: 20px;
    text-align: center;
    font-size: 14px;
}
.app-title {
    border-bottom:1px solid #ddd;
    background-color: white;
}
.app-selected {
    width: 20px;
    height: 20px;
    position: absolute;
    top: 0;
    right: 0;
    display: flex;
    align-items: center;
    justify-content: center;
}
.app-unselected {
    width: 20px;
    height: 20px;
    position: absolute;
    top: 0;
    right: 0;
    display: flex;
    align-items: center;
    justify-content: center;
}
.app-selected-icon {
    width: 16px;
    height: 16px;
}
