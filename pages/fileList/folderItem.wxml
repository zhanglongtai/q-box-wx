<!--folderItem.wxml-->
<template class="list-item" name="folderItem">
    <view class="item-type">
        <image class="item-icon" src="{{item.imgURL}}"></image>
    </view>
    <view
        class="item-info"
        data-uuid="{{item.uuid}}"
        catchtap="handleTapFolder"
    >
        <view class="item-folder-name">{{item.name}}</view>
    </view>
    <view
        class="item-action"
        data-name="{{item.name}}"
        data-type="{{item.type}}"
        data-size="{{item.size}}"
        data-unit="{{item.unit}}"
        data-url="{{item.url}}"
        catchtap="handleAction"
    >
        <image class="item-icon" src="/asset/ic_more_horiz_48px.png" />
    </view>
</template>
