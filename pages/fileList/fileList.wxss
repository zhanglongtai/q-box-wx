@import "../config/icon.wxss";

.container {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.loading {
    width: 750rpx;
    height: 80vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.error-page {
    width: 750rpx;
    height: 100vh;
}
.error-info {
    width: 90%;
    height: 300px;
    margin: 0 auto 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.file-list {
    width: 750rpx;
    height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    /**
    background-color: #b2b2b2;
    **/
}

.menu {
    width: 750rpx;
    height: 50px;
    display: flex;
    align-items: center;
    border-bottom: 1px solid;
}
