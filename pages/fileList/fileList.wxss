.btn {
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
}
.sort-icon {
    width: 32px;
    height: 32px;
}
.breadcrumb {
    width: 600rpx;
    min-width: 300px;
    height: 30px;
    display: flex;
    align-items: center;
}
.folder-chevron {
    width: 24px;
    height: 24px;
    margin: 0 5px 0 5px;
}
.folder-name {
    max-width: 50px;
    min-width: 30px;
    height: 30px;
    font-size: 16px;
    display: flex;
    align-items: center;
    margin: 0 5px 0 5px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.crumb {
    display: flex;
    align-items: center;
}

