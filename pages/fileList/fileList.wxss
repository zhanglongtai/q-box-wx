.list-item {
    width: 750rpx;
    display: flex;
    align-items: center;
    border-bottom: 1px solid #e7e7eb;
}
.item-type {
    width: 125rpx;
    min-width: 50px;
    height: 79px;
    display: flex;
    align-items: center;
    justify-content: center;
}
.item-info {
    width: 525rpx;
    min-width: 240px;
    height: 79px;
    display: flex;
    flex-direction: column;
}
.item-name {
    width: 100%;
    height: 50px;
    line-height: 60px;
    font-size: 16px;
    font-weight: 600;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.item-other-info {
    width: 100%;
    height: 30px;
    display: flex;
    align-items: center;
}
.item-time {
    width: 50%;
    height: 30px;
    line-height: 30px;
    font-size: 14px;
}
.item-size {
    width: 30%;
    height: 30px;
    line-height: 30px;
    font-size: 14px;
}
.item-action {
    width: 100rpx;
    min-width: 40px;
    height: 79px;
    display: flex;
    align-items: center;
    justify-content: center;
}
.item-icon {
    width: 32px;
    height: 32px;
}
.item-folder-name {
    width: 100%;
    height: 79px;
    line-height: 79px;
    font-size: 18px;
    font-weight: 600;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.refresh-hint {
    width: 100%;
    height: 40px;
    line-height: 40px;
    text-align: center;
    font-size: 14px;
}
