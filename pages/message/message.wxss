.loading {
    width: 750rpx;
    height: 80vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.error-page {
    width: 750rpx;
    height: 90vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.error-info {
    width: 90%;
    height: 300px;
    margin: 0 auto 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.title {
    width: 750rpx;
    height: 80px;
    line-height: 80px;
    text-align: center;
}

.message-item {
    width: 750rpx;
    height: 100px;
    display: flex;
    align-items: center;
    border-bottom: 1px solid #e7e7eb;
    position: relative;
}
.message-type {
    width: 125rpx;
    min-width: 50px;
    height: 79px;
    display: flex;
    align-items: center;
    justify-content: center;
}
.message-icon {
    width: 32px;
    height: 32px;
}
.message-info {
    width: 525rpx;
    min-width: 240px;
    height: 79px;
    display: flex;
    flex-direction: column;
}
.message-title {
    width: 100%;
    height: 39px;
    line-height: 40px;
    font-size: 20px;
    font-weight: 600;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.message-content {
    width: 100%;
    height: 60px;
    line-height: 60px;
    font-size: 16px;
    font-weight: 600;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.message-action {
    width: 100rpx;
    min-width: 40px;
    height: 79px;
    display: flex;
    align-items: center;
    justify-content: center;
}
.message-read-effect {
    position: absolute;
    width: 100%;
    height: 100px;
    top: 0px;
    background-color: grey;
    opacity: 0.1;
}
