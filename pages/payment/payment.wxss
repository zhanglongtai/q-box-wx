.balance-container {
    width: 90%;
    height: 80px;
    margin: 5px auto 5px auto;
    border: 2px solid #f1f1f1;
    border-radius: 3px;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.balance-title {
    width: 100px;
    margin: auto 20px auto 20px;
}
.balance {
    width: 100px;
    margin: auto 20px auto 20px;
}

.charge-container {
    width: 90%;
    height: 180px;
    margin: 5px auto 5px auto;
    border: 2px solid #f1f1f1;
    border-radius: 3px;
    display: flex;
    flex-direction: column;
}
.charge-title {
    width: 100px;
    margin: 10px 20px 10px 20px;
}
.charge-payment-container {
    width: 300px;
    margin: 5px 20px 5px 20px;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.charge-payment {
    width: 150px;
    height: 30px;
    border: 1px solid #dfdfdf;
    border-radius: 3px;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.charge-payment-amount {
    width: 100px;
    margin: auto 0 auto 10px;
}
.charge-payment-expand {
    width: 18px;
    height: 18px;
    margin: auto 5px auto 0;
}

.bill-container {
    width: 90%;
    height: 100px;
    margin: 5px auto 5px auto;
    border: 2px solid #f1f1f1;
    border-radius: 3px;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.bill-icon {
    width: 42px;
    height: 42px;
    margin: auto 10px auto 10px;
}
.bill-expand {
    width: 20px;
    height: 20px;
    margin: auto 10px auto 10px;
}
