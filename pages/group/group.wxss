.error-page {
    width: 750rpx;
    height: 100vh;
}
.error-info {
    width: 90%;
    height: 300px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin: 0 auto 0 auto;
}
.loading {
    width: 750rpx;
    height: 300px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.title {
    background-color: rgb(235, 237, 240);
    height: 20px;
    padding: 0 0 0 10px;
    line-height: 20px;
}
.item-container {
    width: 100%;
    height: 50px;
    display: flex;
    align-items: center;
    position: relative;
    border-bottom: 1px solid #e7e7eb;
}
.avatar {
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
}
.avatar-icon {
    width: 32px;
    height: 32px;
}
.tag {
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
}
.tag-owner {
    width: 40px;
    height: 15px;
    text-align: center;
    line-height: 15px;
    border-radius: 2px;
    background-color: #FF1744;
    font-size: 10px;
}
.tag-person {
    width: 40px;
    height: 15px;
    text-align: center;
    line-height: 15px;
    border-radius: 2px;
    background-color: #3D5AFE;
    font-size: 10px;
}
.name {
    width: 100px;
    height: 50px;
    margin: auto 0 auto 10px;
    line-height: 50px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.action {
    width: 110px;
    height: 50px;
    position: absolute;
    right: 0;
    display: flex;
    align-items: center;
}
.action-icon {
    width: 32px;
    height: 32px;
}
